<div class="card card-block">
  <h4 class="card-title"><%= image_tag article.authorImg %> <%= article.author %></h4>
  <h6 class="card-subtitle text-muted"><%= "#{time_ago_in_words(article.date)} ago" %></h6>

  <%= image_tag article.imgSrc %>

  <p class="card-text"><%= article.body %></p>

  <div class="row">
    <div class="col-xs-6">
      <%= article.likes %> likes
    </div>

    <div class="col-xs-6">
      <%= article.comments %> comments
    </div>
  </div>
</div>